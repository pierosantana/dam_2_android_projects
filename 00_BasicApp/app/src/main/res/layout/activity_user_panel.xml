<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    tools:context=".userPanel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Piero Santana LA Rosa"
            android:layout_gravity="left"
            android:inputType="text"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:layout_marginRight="5dp"
            android:id="@+id/upTopName"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:autoSizeMinTextSize="8dp"
            android:layout_marginBottom="10dp"
            android:hint="(santanasavage)"
            android:fontFamily="monospace"
            android:id="@+id/upTopUsername"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:layout_gravity="left"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:fontFamily="monospace"
        />

    <EditText
        android:layout_width="1000pt"
        android:layout_height="22dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textStyle="bold"
        android:layout_gravity="start"
        android:layout_margin="4dp"
        android:fontFamily="monospace"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Piero"
        android:id="@+id/upUsername"
        android:background="@drawable/custom_border"
        android:padding="6dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="monospace"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textStyle="bold"
        android:layout_gravity="start"
        android:layout_margin="4dp"
        android:fontFamily="monospace"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:inputType="textPassword"
        android:id="@+id/upPassword"
        android:background="@drawable/custom_border"
        android:padding="6dp"
        android:textColor="@color/cardview_shadow_start_color"
        android:layout_marginBottom="15dp"
        android:fontFamily="monospace"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="bold"
        android:layout_gravity="start"
        android:layout_margin="4dp"
        android:fontFamily="monospace"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Piero"
        android:id="@+id/upName"
        android:background="@drawable/custom_border"
        android:padding="6dp"
        android:layout_marginBottom="15dp"
        android:textSize="14dp"
        android:fontFamily="monospace"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textStyle="bold"
        android:layout_gravity="start"
        android:layout_margin="4dp"
        android:fontFamily="monospace"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/upEmail"
        android:textSize="14dp"

        android:background="@drawable/custom_border"
        android:padding="6dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="monospace"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textStyle="bold"
        android:layout_gravity="start"
        android:layout_margin="4dp"
        android:fontFamily="monospace"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""
        android:id="@+id/upCityCountry"
        android:background="@drawable/custom_border"
        android:padding="6dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="monospace"/>
    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Update profile"
        android:backgroundTint="@color/black"
        android:id="@+id/upButtonUpdate"/>





</LinearLayout>