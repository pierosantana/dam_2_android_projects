<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grosso Napoletano"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direcci칩n:"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tama침o:"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <RadioGroup android:id="@+id/rgGrupo1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton android:id="@+id/rbPeque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peque침a" />

        <RadioButton android:id="@+id/rbMediana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mediana" />
        <RadioButton android:id="@+id/rbGrande"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grande" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Ingredientes -"
        android:textSize="18sp"
        android:textStyle="bold"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">
    <LinearLayout
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <CheckBox android:id="@+id/cbPepperoni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pepperoni"
            android:checked="false"
            />

        <CheckBox android:id="@+id/cbJamon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="jam칩n"
            android:checked="false" />

        <CheckBox android:id="@+id/cbAceitunas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="aceitunas"
            android:checked="false" />

        <CheckBox android:id="@+id/cbBacon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bacon"
            android:checked="false" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <CheckBox android:id="@+id/cbMaiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="maiz"
            android:checked="false" />

        <CheckBox android:id="@+id/cbCebolla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cebolla"
            android:checked="false" />

        <CheckBox android:id="@+id/cbPollo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pollo"
            android:checked="false" />

        <CheckBox android:id="@+id/cbCarne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="carne"
            android:checked="false"/>

    </LinearLayout>



</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Total:"
            android:id="@+id/precio"
            android:textSize="24sp"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular precio"
        android:id="@+id/botonPrecio"
        android:layout_gravity="center"
        android:backgroundTint="@color/black"
        />



</LinearLayout>